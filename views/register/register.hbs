<form class="form-signin" method="post">
    <!-- iterate through the error messages -->
    {{#each errorMessages}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}

    <h2 class="form-signin-heading text-center">New Account</h2>

    <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
            value="test"
            required
            autofocus
    >

    <input
            type="email"
            name="email"
            class="form-control"
            placeholder="Email"
            value="test@test.com"
            required
    >

    <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Password"
            value="123"
            required
    >

    <input
            type="password"
            name="confirmPassword"
            class="form-control"
            placeholder="Confirm Password"
            value="123"
            required
    >

    <button
            type="submit"
            class="btn btn-lg btn-primary btn-block"
    >
        Sign up
    </button>

    <h4 class="text-center">Or</h4>
    <a href="/auth/facebook" class="btn btn-lg btn-success btn-block">Sign Up with Facebook</a>
</form>